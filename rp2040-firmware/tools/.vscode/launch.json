    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File Convert-Sprite",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "args": ["convert-sprite"]
        },
        {
            "name": "ng: Convert Palette",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/ngtool/ng_tool.py",
            "console": "integratedTerminal",
            "justMyCode": true, 
            "args": [
                "convert-palette",
                "--input",
                "res/palette.png",
                "--output",
                "test/palette.h",
                "--array-name",
                "color_pal"
            ]
        },
        {
            "name": "ng: Convert Palette(Binary)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/ngtool/ng_tool.py",
            "console": "integratedTerminal",
            "justMyCode": true, 
            "args": [
                "convert-palette",
                "--input",
                "res/palette.png",
                "--output",
                "test/palette.bin",
                "--binary"
            ]
        },        
        {
            "name": "ng:Tilesheet",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/ngtool/ng_tool.py",
            "args": [
                "convert-tilesheet",
                "--tile-size",
                "16x16",
                "--tilesheet-file",
                "res/sprites_misc.png",
                "--palette-file",
                "res/palette.png",
                "--output",
                "test/sprite_misc.h",
                "--array-name",
                "sprite_misc"
            ]
        }        

        ,{
            "name": "ng:pack-files",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/ngtool/ng_tool.py",
            "args": [
                "pack-files",
                "${workspaceFolder}/../mod/assets/sprites/*.png",
                "--output","${workspaceFolder}/test/sprites.bin"
            ]
        }        
        ,{
            "name": "ng:create-gluecode",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/ngtool/ng_tool.py",
            "args": [
                "create-gluecode",
                "${workspaceFolder}/../source/ng_gfx.h","${workspaceFolder}/../source/ng_io.h",
                "--output","${workspaceFolder}/generator/input/glue.xml"
            ]
        },
        {
            "name": "ng: gluecode",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/ngtool/gen.py",
            "args" : [
                "--config-file","${workspaceFolder}/generator/generate_gluecode.json"
            ],
            "console": "integratedTerminal"
        },           
    ]
}