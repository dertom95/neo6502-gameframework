{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Pico: Firmware install",
            "type": "shell",
            "command": "make pico-install",
            "group": {
              "kind": "build",
              "isDefault": true
            },
        },
        {
          "label": "Pico: Firmware install and reboot",
          "type": "shell",
          "command": "make pico-install && make pico-reboot",
          "group": {
            "kind": "build",
            "isDefault": true
          },
      },
      {
          "label": "Pico: reboot",
          "type": "shell",
          "command": "make pico-reboot",
          "group": {
            "kind": "build",
            "isDefault": true
          },
        },
        {
          "label": "Convert Assets",
          "type": "shell",
          "command": "make assets-create",
          "group": {
            "kind": "build",
            "isDefault": true
          },
        },
        {
            "label": "Compile mod-flappy",
            "type": "shell",
            "command": "make source-compile",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/mod-flappy"
            }
        },
        {
            "label": "Compile/Pack mod-flappy",
            "type": "shell",
            "command": "make mod-assets-create-only-code",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }        
                      

    ]
}